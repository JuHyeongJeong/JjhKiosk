<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:view="clr-namespace:JjhKiosk.Title.UI.Views"
                    xmlns:controls="clr-namespace:JjhKiosk.Support.Controls;assembly=JjhKiosk.Support">
    <Style TargetType="{x:Type view:BannerView}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type view:BannerView}">
                    <Grid>
                        <controls:ControlSlider Grid.Row="0" x:Name="slider"
                                                View="{Binding CurrentView}"
                                                SlideType="{Binding SlideType}"
                                                Duration="0:0:1"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>