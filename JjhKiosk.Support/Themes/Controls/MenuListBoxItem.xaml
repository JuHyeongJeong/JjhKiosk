<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ctrl="clr-namespace:JjhKiosk.Support.Controls">
    <Style TargetType="{x:Type ctrl:MenuListBoxItem}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ctrl:MenuListBoxItem}">
                    <Border x:Name="BackBorder" 
                            BorderBrush="Gray" 
                            BorderThickness="1" 
                            CornerRadius="10" 
                            Padding="10" 
                            Margin="5" 
                            Background="White"
                            Cursor="Hand">
                        <StackPanel Orientation="Vertical" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center">
                            <Image Source="{Binding MenuIcon}" 
                                   Width="100" 
                                   Height="100" 
                                   Margin="5" 
                                   Stretch="Fill"/>
                            <TextBlock Text="{Binding Name}" 
                                       Width="100"
                                       TextAlignment="Center"
                                       TextWrapping="Wrap"
                                       FontSize="14" 
                                       FontWeight="Bold" 
                                       HorizontalAlignment="Center" 
                                       Margin="5"/>
                        </StackPanel>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="BackBorder" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect ShadowDepth="5" BlurRadius="10" Direction="135" Color="Gray"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>