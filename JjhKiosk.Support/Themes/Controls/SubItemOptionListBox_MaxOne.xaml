<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ctrl="clr-namespace:JjhKiosk.Support.Controls"
                    xmlns:cvt="clr-namespace:JjhKiosk.Support.Converters"
                    xmlns:cc="clr-namespace:JjhKiosk.Support.ControlBase">
    <Style TargetType="{x:Type ctrl:SubItemOptionListBox_MaxOne}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ctrl:SubItemOptionListBox_MaxOne}">
                    <Border BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Background="{TemplateBinding Background}"
                            >
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="{Binding OptionName}" 
                                            FontSize="20"/>
                                <ScrollViewer Focusable="false" VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Disabled" Grid.Row="0">
                                    <WrapPanel IsItemsHost="True" Orientation="Horizontal"/>
                                </ScrollViewer>
                            </StackPanel>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemContainerStyle">
            <Setter.Value>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <Border x:Name="Border"
                        CornerRadius="10"
                        Background="Transparent"
                        BorderBrush="LightSkyBlue"
                        BorderThickness="2"
                        Height="{DynamicResource Shared.MenuOptionButton.Height.Regular}"
                        Width="{DynamicResource Shared.MenuOptionButton.Width.Large}"
                        Margin="5"
                        SnapsToDevicePixels="True">
                                    <!-- 내부 RadioButton -->
                                    <RadioButton x:Name="RadioButton"
                                                 Content="{Binding SelectionName}"
                                                 Background="Transparent"
                                                 Foreground="#4971f5"
                                                 FontWeight="Bold"
                                                 BorderThickness="0"
                                                 HorizontalAlignment="Center"
                                                 VerticalAlignment="Center"
                                                 GroupName="RadioButtonGroup"
                                                 FontSize="18">
                                        <RadioButton.Template>
                                            <ControlTemplate TargetType="{x:Type RadioButton}">
                                                <Border Background="Transparent" 
                                                        HorizontalAlignment="Stretch" 
                                                        VerticalAlignment="Stretch"
                                                        IsHitTestVisible="False">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      RecognizesAccessKey="True"
                                                      IsHitTestVisible="False"/>
                                                </Border>
                                            </ControlTemplate>
                                        </RadioButton.Template>
                                    </RadioButton>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <!-- 눌린 상태 -->
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#4971f5"/>
                                        <Setter TargetName="Border" Property="BorderBrush" Value="#4971f5"/>
                                        <Setter TargetName="RadioButton" Property="Foreground" Value="White"/>
                                    </Trigger>
                                    <!-- 기본 상태 -->
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter TargetName="Border" Property="Background" Value="Transparent"/>
                                        <Setter TargetName="Border" Property="BorderBrush" Value="#4971f5"/>
                                        <Setter TargetName="RadioButton" Property="Foreground" Value="#4971f5"/>
                                    </Trigger>
                                    <!-- 마우스 오버 -->
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#E0F7FF"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Background" Value="White"/>
    </Style>
</ResourceDictionary>