<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ctrl="clr-namespace:JjhKiosk.Support.Controls"
                    xmlns:cvt="clr-namespace:JjhKiosk.Support.Converters"
                    xmlns:cc="clr-namespace:JjhKiosk.Support.ControlBase">
    <Style TargetType="{x:Type ctrl:CategoryListBox}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ctrl:CategoryListBox}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Items Panel -->
                        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Hidden">
                            <WrapPanel IsItemsHost="True" 
                                       Orientation="Horizontal" 
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"/>
                        </ScrollViewer>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="Gray"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="White"/>
    </Style>
</ResourceDictionary>