<UserControl x:Class="JjhKiosk.Login.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:JjhKiosk.Login.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:util="clr-namespace:JjhKiosk.Login.Utility"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="400"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             >
    <Grid Background="#F0F0F0"
          Height="350"
          Width="400">
        <Border CornerRadius="10" Background="White" Padding="20" Margin="20" VerticalAlignment="Center">
            <StackPanel>
                <TextBlock Text="JJH KIOSK LOGIN" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="{DynamicResource LoginButtonBrush}" 
                           HorizontalAlignment="Center" 
                           Margin="0, 0, 0, 20" />

                <TextBlock Text="Account" 
                           FontWeight="SemiBold" 
                           Margin="0, 0, 0, 5" />
                
                <TextBox Height="35" Width="300" Margin="0, 0, 0, 15" Padding="5" 
                         Text="{Binding Id}"/>

                <TextBlock Text="Password" 
                           FontWeight="SemiBold" 
                           Margin="0, 0, 0, 5" />
                <PasswordBox Height="35" 
                             Width="300" 
                             Margin="0, 0, 0, 20" 
                             Padding="5" 
                             util:PasswordHelper.Attach="True"
                             util:PasswordHelper.Password="{Binding Pwd,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>

                <Button Content="Login" 
                        Width="300" 
                        Height="40" 
                        Background="{DynamicResource LoginButtonBrush}" 
                        Foreground="White" 
                        FontWeight="Bold" 
                        BorderBrush="{DynamicResource LoginButtonBrush}" 
                        Cursor="Hand"
                        IsDefault="True"
                        Command="{Binding LoginAcceptCommand}"/>

  
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
